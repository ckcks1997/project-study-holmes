<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="likes">

<select id = "likesCount" resultType = "int" parameterType = "String">
	select count(*) from likes where board_num = #{board_num}
</select>

<select id = "likesOne" resultType = "likes" parameterType="int">
	select * from likes where board_num = #{board_num}
</select>

<select id = "likesInsert" parameterType = "likes" >
	insert into likes values (#{likes_num}, #{board_num}, #{nickname})
</select>

<select id = "likesNextNum" resultType = "int">
	select likes_seq.nextval from dual
</select>

<select id = "likesDelete" parameterType= "int">
	delete from likes where board_num = #{board_num}
</select>
</mapper>