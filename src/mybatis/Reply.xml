<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reply">



<!-- 댓글 등록 -->
<insert id = "insertReply" parameterType = "reply">
	insert into reply values (#{reply_num}, #{board_num}, #{nickname}, sysdate,#{content})
</insert>


<select id = "replyNextNum" resultType = "int">
	select reply_seq.nextval from dual
</select>

<select id = "replyList" resultType = "reply">
	select * from reply r, study_member m
	where r.nickname = m.nickname and board_num = #{board_num}
	order by reply_num
</select>


<!-- 댓글 갯수 -->
<select id = "replyCount" resultType = "int" parameterType = "string">
	select count(*) from reply where board_num = #{board_num}
</select>

</mapper>