<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="report">


<insert id = "insertReport" parameterType = "report">
	insert into report values (#{report_num}, #{nickname}, #{report_reason}, #{board_num})
</insert>

<select id = "reportNextNum" resultType = "int">
	select report_seq.nextval from dual
</select>

<!-- 게시글 당 신고한 닉네임 리스트 가져오기 -->
<select id = "reportNickname" resultType = "String" parameterType = "int">
	select Nickname from report where board_num = #{board_num}
</select>

</mapper>